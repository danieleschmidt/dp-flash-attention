# DP-Flash-Attention Environment Configuration
# Copy this file to .env and configure for your environment

# ===== CUDA Configuration =====
CUDA_VISIBLE_DEVICES=0
CUDA_LAUNCH_BLOCKING=0
TORCH_CUDA_ARCH_LIST="8.0 8.6 9.0"  # H100, A100, RTX 4090

# ===== Privacy Parameters =====
# Default privacy budget for experiments
DEFAULT_EPSILON=1.0
DEFAULT_DELTA=1e-5
MAX_GRAD_NORM=1.0

# ===== Development Settings =====
PYTHONPATH=./src
LOG_LEVEL=INFO
PYTEST_CURRENT_TEST=""

# ===== Monitoring & Observability =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_EXPORT_INTERVAL=30

# Enable privacy metrics collection
PRIVACY_METRICS_ENABLED=true
PRIVACY_METRICS_EXPORT_PATH="./metrics/privacy_metrics.json"

# ===== Security Settings =====
# Cryptographically secure random seed for noise generation
SECURE_RANDOM_SEED=""
NOISE_GENERATOR_BACKEND="torch"  # torch, numpy, or secure

# ===== Research Configuration =====
# Enable experimental features
ENABLE_EXPERIMENTAL_KERNELS=false
ENABLE_MIXED_PRECISION_DP=true
ENABLE_ADAPTIVE_CLIPPING=false

# ===== Performance Tuning =====
# Memory optimization
FLASH_ATTENTION_MEMORY_EFFICIENT=true
GRADIENT_CHECKPOINTING=false

# Kernel compilation cache
TRITON_CACHE_DIR="./cache/triton"
CUDA_CACHE_DISABLE=0

# ===== Benchmarking =====
BENCHMARK_WARMUP_ITERATIONS=10
BENCHMARK_TEST_ITERATIONS=100
BENCHMARK_OUTPUT_DIR="./benchmarks/results"

# ===== Testing =====
# Privacy testing configuration
PRIVACY_TEST_ATTACK_BUDGET=10000
PRIVACY_TEST_SHADOW_MODELS=50
PRIVACY_TEST_CONFIDENCE=0.95

# ===== Compliance & Auditing =====
# Enable privacy audit logging
PRIVACY_AUDIT_LOG=true
PRIVACY_AUDIT_LOG_PATH="./logs/privacy_audit.log"

# SBOM generation
SBOM_OUTPUT_FORMAT="spdx-json"
SBOM_OUTPUT_PATH="./compliance/sbom.spdx.json"